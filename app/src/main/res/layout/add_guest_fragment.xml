<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- First Name -->
    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/guestFirstnameContainer">

        <TextView
                android:text="Firstname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guestFirstnameLabel"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="5dp"
                app:layout_constraintStart_toStartOf="parent"
        />
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:id="@+id/guestFirstnameInput"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                app:layout_constraintStart_toEndOf="@+id/guestFirstnameLabel"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="end"
                android:hint="Firstname"
                app:layout_constraintEnd_toEndOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <!-- Last name -->
    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/guestLastnameContainer"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/guestFirstnameContainer">

        <TextView
                android:text="Lastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guestLastnameLabel"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="5dp"
                app:layout_constraintStart_toStartOf="parent"
        />
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:id="@+id/guestLastnameInput"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                app:layout_constraintStart_toEndOf="@+id/guestLastnameLabel"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="end"
                android:hint="Lastname"
                app:layout_constraintEnd_toEndOf="parent"
        />
    </android.support.constraint.ConstraintLayout>

    <!--Date from -->
    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/guestDateFromContainer"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/guestLastnameContainer">

        <TextView
                android:text="Date from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guestDateFromLabel"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="5dp"
                app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:text="Select date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/guestDateFromInput"
                app:layout_constraintStart_toEndOf="@+id/guestDateFromLabel"
                android:layout_marginStart="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="end"/>
    </android.support.constraint.ConstraintLayout>

    <!--Date Till -->
    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/guestDateTillContainer"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/guestDateFromContainer">

        <TextView
                android:text="Date till"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guestDateTillLabel"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="5dp"
                app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:text="Select date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/guestDateTillInput"
                app:layout_constraintStart_toEndOf="@+id/guestDateTillLabel"
                android:layout_marginStart="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="end"/>
    </android.support.constraint.ConstraintLayout>

    <!--Did pay -->
    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/guestDidPayContainer"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/guestDateTillContainer">

        <TextView
                android:text="Did pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guestDidPayLabel"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="5dp"
                app:layout_constraintStart_toStartOf="parent"/>

        <Switch android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/guestDidPaySwitch"
                app:layout_constraintStart_toEndOf="@+id/guestDidPayLabel"
                android:layout_marginStart="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="end"
                android:layout_marginEnd="10dp"/>
    </android.support.constraint.ConstraintLayout>
    <Button
            android:text="Confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/confirmBtn"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="160dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="160dp"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/guestDidPayContainer"
            android:background="#FFFFFF"
            android:backgroundTint="#FFFFFF"/>

</android.support.constraint.ConstraintLayout>